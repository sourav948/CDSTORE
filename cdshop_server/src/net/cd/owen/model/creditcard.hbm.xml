<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="net.cd.owen.model">
    <class name="CreditCard" table="creditcards">
        <id column="creditCardNumber" name="creditCardNumber"> 
        <generator class="native"/> 
        </id>
        <property column="creditCardPassword" name="creditCardPassword" type="java.lang.String" />
        <property column="bankName" name="bankName" type="java.lang.String" />
        <property column="customerName" name="customerName" type="java.lang.String" />
        <property column="upperLimit" name="upperLimit" type="java.lang.Double" />
    </class>
</hibernate-mapping>
